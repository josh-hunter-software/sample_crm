<article ng-app="angular_test" ng-controller="CustomerSearchController">
  <header>
    <h1 ng-if="name">Hello, {{name}}</h1>
  </header>
  <section>
    <form class="form-inline" role="form">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter your name" autofocus ng-model="name">
      </div>
    </form>
  </section>
</article>
